<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="100dp"
        android:bottom="0dp"
    >
        <shape
            android:dither="true"
            android:shape="rectangle"
        >
            <corners android:radius="4dp"/>

            <gradient
                android:angle="90"
                android:endColor="#00000000"
                android:startColor="@color/shadow"
            />
        </shape>
    </item>

    <item
        android:left="5dp"
        android:right="5dp"
        android:top="0dp"
        android:bottom="5dp"
    >
        <shape android:shape="rectangle">
            <solid android:color="@color/cardColor"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>